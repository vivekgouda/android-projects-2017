<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gouda.vivek.tipcalculator.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:ems="10"
        android:layout_marginTop="43dp"
        android:id="@+id/billPercentageId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:textStyle="bold"
        android:hint="@string/hint_name" />

    <TextView
        android:text="@string/tip_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billPercentageId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="51dp"
        android:id="@+id/titleTV"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTV"
        android:layout_alignLeft="@+id/titleTV"
        android:layout_alignStart="@+id/titleTV"
        android:layout_marginTop="29dp"
        android:id="@+id/seekBarForTip"
        android:max="20"
        android:layout_alignRight="@+id/caluculateButton"
        android:layout_alignEnd="@+id/caluculateButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caluculateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:id="@+id/resultTV"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentageTV"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_below="@+id/titleTV"
        android:layout_alignRight="@+id/seekBarForTip"
        android:layout_alignEnd="@+id/seekBarForTip"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <Button
        android:text="@string/button_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/caluculateButton"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/seekBarForTip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/finalBill"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />
</RelativeLayout>
